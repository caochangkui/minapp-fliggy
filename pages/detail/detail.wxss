/* pages/detail/detail.wxss */
.detail {
    width: 100%;
    padding-bottom: 100rpx;
}
.top {
    width: 100%;
}
.top image {
    width: 100%;
}
.tips {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-around;
    padding: 10rpx;
}
.tips view {
    display: flex;
    align-items: center;
}
.tips text {
    font-size: 12px;
    color: #555;
    padding-left: 10rpx;
}
.server { 
    padding: 0 10px;
}
.server text {
    font-size: 14px;
}
.comment {
    padding: 0 10px;
}
.comment view text {
    display: inline-block;
    background: #fffae2;
    border-radius: 16rpx;
    color: #555;
    padding: 2px 10px;
    font-size: 12px;
    margin-right: 10px;
}
.option {
    height: 80rpx;
    width: 100%; 
    position: fixed;
    bottom: 0;
    left: 0;
    background: #fff;
    display: flex;
    align-items: center;
    box-shadow:0px -1px 3px #bbb;
}
.option image {
    height: 30rpx;
    width: 40rpx;
}
.option .left {
    flex: 1;
}
.option .right {
    flex: 1; 
}
.option .left,.option .right {
    display: flex;
    align-items: center;  
}

.option .left { 
    justify-content: space-around;
}
.option .left view {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}
.option .left text {
    font-size: 10px;
    color: #555;
}

.option .right view {
    flex: 1;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 28rpx;
    color: #fff; 
    font-weight: bold;
    text-align: center;
}
.option .right .in {
    background: linear-gradient(#ffd101,#ff9302);
    border-radius: 40rpx 0 0 40rpx;
}

.option .right .buy {    
    background: linear-gradient(#ff7500,#f35);
    border-radius: 0 40rpx 40rpx 0;
}